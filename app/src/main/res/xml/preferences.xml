<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/PREFERENCE_VR_application_category_title">
        <EditTextPreference android:title="@string/PREFERENCE_VR_app_package_title"
            android:key="@string/PREFERENCE_VR_app_package_key"
            android:summary="@string/PREFERENCE_VR_app_package_summary"
            android:defaultValue="@string/PREFERENCE_VR_app_package_default"
            />
        <CheckBoxPreference android:title="@string/PREFERENCE_head_log_title"
            android:key="@string/PREFERENCE_head_log_key"
            android:summary="@string/PREFERENCE_head_log_summary"
            android:defaultValue="@bool/PREFERENCE_head_log_default"
            />
        <CheckBoxPreference android:title="@string/PREFERENCE_bandwidth_log_title"
            android:key="@string/PREFERENCE_bandwidth_log_key"
            android:summary="@string/PREFERENCE_bandwidth_log_summary"
            android:defaultValue="@bool/PREFERENCE_bandwidth_log_default"
            />
        <CheckBoxPreference android:title="@string/PREFERENCE_freezing_log_title"
            android:key="@string/PREFERENCE_freezing_log_key"
            android:summary="@string/PREFERENCE_freezing_log_summary"
            android:defaultValue="@bool/PREFERENCE_freezing_log_default"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/PREFERENCE_video_list_category_title">
        <EditTextPreference android:title="@string/PREFERENCE_local_list_title"
            android:key="@string/PREFERENCE_local_list_key"
            android:summary="@string/PREFERENCE_local_list_summary"
            android:defaultValue="@string/PREFERENCE_local_list_default"
            />
        <EditTextPreference android:title="@string/PREFERENCE_remote_list_title"
            android:key="@string/PREFERENCE_remote_list_key"
            android:summary="@string/PREFERENCE_remote_list_summary"
            android:defaultValue="@string/PREFERENCE_remote_list_default"
        />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/PREFERENCE_exoplayer_params_category_title">
        <EditTextPreference android:title="@string/PREFERENCE_startup_buffer_title"
            android:key="@string/PREFERENCE_startup_buffer_key"
            android:summary="@string/PREFERENCE_startup_buffer_summary"
            android:defaultValue="@integer/PREFERENCE_startup_buffer_default"
            android:inputType="number"
            />
        <EditTextPreference android:title="@string/PREFERENCE_rebuffering_buffer_title"
        android:key="@string/PREFERENCE_rebuffering_buffer_key"
        android:summary="@string/PREFERENCE_rebuffering_buffer_summary"
        android:defaultValue="@integer/PREFERENCE_rebuffering_buffer_default"
        android:inputType="number"
        />
        <EditTextPreference android:title="@string/PREFERENCE_min_buffer_title"
            android:key="@string/PREFERENCE_min_buffer_key"
            android:summary="@string/PREFERENCE_min_buffer_summary"
            android:defaultValue="@integer/PREFERENCE_min_buffer_default"
            android:inputType="number"
            />
        <EditTextPreference android:title="@string/PREFERENCE_max_buffer_title"
            android:key="@string/PREFERENCE_max_buffer_key"
            android:summary="@string/PREFERENCE_max_buffer_summary"
            android:defaultValue="@integer/PREFERENCE_max_buffer_default"
            android:inputType="number"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/PREFERENCE_tiling_category_title">
        <EditTextPreference android:title="@string/PREFERENCE_grid_width_title"
            android:key="@string/PREFERENCE_grid_width_key"
            android:summary="@string/PREFERENCE_grid_width_summary"
            android:defaultValue="@integer/PREFERENCE_grid_width_default"
            android:inputType="number"
            />
        <EditTextPreference android:title="@string/PREFERENCE_grid_height_title"
            android:key="@string/PREFERENCE_grid_height_key"
            android:summary="@string/PREFERENCE_grid_height_summary"
            android:defaultValue="@integer/PREFERENCE_grid_height_default"
            android:inputType="number"
            />
        <EditTextPreference android:title="@string/PREFERENCE_tiling_title"
            android:key="@string/PREFERENCE_tiling_key"
            android:summary="@string/PREFERENCE_tiling_summary"
            android:defaultValue="@string/PREFERENCE_tiling_default"
            />
    </PreferenceCategory>
</PreferenceScreen>